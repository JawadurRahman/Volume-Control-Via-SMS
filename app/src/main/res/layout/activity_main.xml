<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Control Via SMS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Description of the app -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Control the volume of your device remotely by sending either of the following SMS commands.\nVolume 100\n
Volume 75\n
Volume 50\n
Volume 25\n
Volume 0"
        android:textColor="#555"
        android:textSize="14sp" />

    <!-- Switch to enable/disable remote volume control -->
    <Switch
        android:id="@+id/switchRemoteControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Remote Volume Control"
        android:trackTint="@color/green_grey"/>

    <!-- Spacer for layout -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Text for information/help -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle the switch to enable or disable the ability to control the volume remotely via SMS."
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout>
